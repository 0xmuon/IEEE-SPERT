{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/client/static/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/client/public/images/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/public/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/public/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
} 